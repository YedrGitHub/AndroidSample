<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mamating"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.mamating.AppContext"
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- 数据库名称 -->

        <meta-data
            android:name="AA_DB_NAME"
            android:value="momting.db" />
        <!-- 数据库版本号 不设置默认是1 -->

        <meta-data
            android:name="AA_DB_VERSION"
            android:value="1" />

        <provider
            android:name="com.activeandroid.content.ContentProvider"
            android:authorities="com.mamating"
            android:exported="false" />

        <activity
            android:name="com.mamating.activity.GuideActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mamating.activity.LoginActivity"
            android:theme="@android:style/Theme.NoTitleBar" />
        <activity android:name="com.mamating.activity.SinaOauthActivity" />
        <activity android:name="com.mamating.activity.QQOauthActivity" />
        <activity
            android:name="com.mamating.activity.HomeActivity"
            android:theme="@style/StyledIndicators" />
    </application>

</manifest>